<h2>Log in</h2>
<div id="login-page">
  <div class="container">
    <div class="row">
      <div class="col-xs-offset-3 col-xs-6">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "login"}) do |f| %>
            <div class="field col-xs-offset-3 col-xs-6">
              <%#= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, placeholder: 'Email Address' %>
              <%= link_to 'Forgot Username?' %>
            </div>

            <div class="field col-xs-offset-3 col-xs-6">
              <%#= f.label :password %><br/>
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
              <%= link_to 'Forgot Password?' %>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
            <% end -%>

            <div class="actions col-xs-offset-3 col-xs-3">
              <%= f.submit "Log in" %>
            </div>
            <div class="actions col-xs-3">
              <%= f.button "Sign Up" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>