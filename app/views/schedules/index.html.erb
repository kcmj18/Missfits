<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">Schedule</div>

<table class="table">
  <thead>
    <tr>
      <th>Course</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.course.course_name %></td>
        <td><%= schedule.user.first_name %></td>
        <td><%= link_to 'Details', schedule %></td>
        <td class="danger"><%= link_to 'Drop Class', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Add New Class', new_schedule_path %>
